{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["jest"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"__tests__/**/*.ts",
		"__tests__/**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"nativewind-env.d.ts"
	]
}
